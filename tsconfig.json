{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["vinxi/types/client", "node"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./drizzle/*"]
    }
  },
  "include": ["src/**/*", "drizzle/schema.ts", "drizzle/schema.test.ts"],
  "exclude": ["node_modules", "dist", ".output", ".vinxi"]
}
